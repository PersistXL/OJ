<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thoughtWorks.dao.WrongTitleDao">

    <insert id="wrongTitleId" parameterType="com.thoughtWorks.entity.WrongTitle">
        INSERT
        INTO o_wrong_title (subject_id, student_id)
        VALUES (#{subjectId},#{studentId})
    </insert>

    <select id="selectWrongTitleNo" parameterType="String" resultType="map">
        SELECT o_wrong_title.*,oj.o_subject.*
        FROM oj.o_wrong_title,oj.o_subject
        WHERE o_wrong_title.student_id = #{username}
        AND o_wrong_title.subject_id = o_subject.id
    </select>

    <delete id="deleteWrongTitle" parameterType="int">
        DELETE FROM o_wrong_title WHERE id=#{id}
    </delete>

</mapper>