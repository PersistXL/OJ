    <select id="findTestpaper" resultType="map">
        SELECT o_testpaper.*,o_classes.name ClassName,o_student_testpaper.*
        FROM o_testpaper,o_classes,o_student_testpaper WHERE classes_id=o_classes.id AND o_testpaper.id=o_student_testpaper.testpaper_id;
    </select>
    <select id="selectTestpaperById" resultType="Testpaper" parameterType="int">
        SELECT *
        FROM o_testpaper WHERE id=#{id};
    </select>

